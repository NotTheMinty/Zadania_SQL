select osoby.imie, osoby.nazwisko, emaile.email, adresy.miasto from osoby join emaile on osoby.id_osoby = emaile.id_osoby join adresy on adresy.id_osoby = osoby.id_osoby;

select osoby.imie, osoby.nazwisko, zamowienia.produkt, zamowienia.kwota from zamowienia join osoby on zamowienia.id_osoby = osoby.id_osoby where zamowienia.kwota > 2000;

select avg(zamowienia.kwota) from zamowienia;

select adresy.miasto, count(adresy.miasto) from adresy join osoby on osoby.id_osoby = adresy.id_osoby group by adresy.miasto;

select osoby.imie, osoby.nazwisko from osoby left join zamowienia on osoby.id_osoby = zamowienia.id_osoby where zamowienia.kwota is null;

select osoby.imie, osoby.nazwisko, sum(zamowienia.kwota) as suma from osoby join zamowienia on osoby.id_osoby = zamowienia.id_osoby group by osoby.id_osoby order by suma desc limit 3;

select osoby.imie, osoby.nazwisko from osoby join zamowienia on osoby.id_osoby = zamowienia.id_osoby group by osoby.id_osoby having count(zamowienia.kwota) > 1;

