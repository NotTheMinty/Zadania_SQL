-- 10. CREATE TABLE przydzial
CREATE TABLE przydzial (
    przydzial_id INT AUTO_INCREMENT PRIMARY KEY,
    pracownik_id INT NOT NULL,
    narzedzie_id INT NOT NULL,
    data_od DATE NOT NULL,
    data_do DATE
);

