-- 1. Tworzenie tabeli.
1. Wybierz baze danych lub ja stworz
2. Kliknij Struktura -> Utworz tabele
3. Podaj nazwe tabeli i liczbe kolumn
4. Uzupelnij pola
5. Kliknij Zapisz, aby stworzyć tabele

-- 2. CREATE TABLE

CREATE TABLE nazwa_tabeli(
	nazwa_pola typ,
	Nazwa_pola typ,
	…(więcej lub mniej),
	PRIMARY KEY (nazwa_pola)
);

-- 3. Wprowadzanie danych do tabeli
1.	Kliknij wybrana tabele
2.	Wejdz w zakladke Wstaw (lub Insert)
3.	Wpisz dane w formularzu
4.	Kliknij Wykonaj (lub Go) i wiersz zostanie oddany do tabeli


-- CREATE TABLE samochod
CREATE TABLE samochod (
    samochod_id int(11) UNSIGNED NOT NULL AUTO_INCREMENT PRIMARY KEY ,
    vin varchar(17) UNIQUE NOT NULL, 
    producent varchar(50) NOT NULL, 
    marka varchar(30) NOT NULL, 
    model varchar(20) NOT NULL, 
    rok_produkcji YEAR DEFAULT NULL
);

-- CREATE TABLE pracownik
CREATE TABLE pracownik (
    pracownik_id INT AUTO_INCREMENT PRIMARY KEY,
    pesel CHAR(11) UNIQUE,
    nazwisko VARCHAR(50),
    imie VARCHAR(30),
    telefon VARCHAR(11),
    pobory DECIMAL(10,2)
);


-- 4. CREATE TABLE wyjazd
CREATE TABLE wyjazd (
    wyjazd_id INT AUTO_INCREMENT PRIMARY KEY,
    pracownik_id INT NOT NULL,
    samochod_id INT NOT NULL,
    data_od DATE NOT NULL,
    data_do DATE,
    przebieg INT
);

