-- 8. CREATE TABLE narzedzie
CREATE TABLE narzedzie (
    narzedzie_id INT AUTO_INCREMENT PRIMARY KEY,
    numer_fabr VARCHAR(10) UNIQUE NOT NULL,
    producent VARCHAR(50) NOT NULL,
    rodzaj VARCHAR(20) NOT NULL,
    nazwa VARCHAR(30) NOT NULL,
    data_produkcji DATE
);

